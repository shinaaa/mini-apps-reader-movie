page {
  background: #b3d4db;
}

.wel {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 150rpx;
}

.name {
  font-family: Microsoft Yahei;
  font-size: 32rpx;
  margin-top: 150rpx;
}

.title {
  margin-top: 200rpx;
  text-align: center;
  color: #405f80;
  font-size: 30rpx;
  border: 1px solid #405f80;
  border-radius: 10rpx;
  padding: 4rpx;
  width: 240rpx;
  line-height: 60rpx;
}
